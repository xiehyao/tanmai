/* app.wxss - 全局样式 */
page {
  background-color: #F8F8F8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  color: #333;
}

.container {
  min-height: 100vh;
  padding: 40rpx;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 8rpx;
  font-size: 32rpx;
  text-align: center;
  background-color: #667eea;
  color: #fff;
  border: none;
}

.btn:active {
  opacity: 0.8;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 文本样式 */
.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.desc {
  font-size: 24rpx;
  color: #999;
}

