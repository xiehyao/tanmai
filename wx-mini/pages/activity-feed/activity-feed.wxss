/* pages/activity-feed/activity-feed.wxss */
.feed-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.feed-header {
  position: sticky;
  top: 0;
  z-index: 10;
  background: #fff;
  padding: 16rpx 24rpx 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.06);
}

.search-bar {
  display: flex;
  align-items: center;
  height: 64rpx;
  padding: 0 24rpx;
  background: #f3f4f6;
  border-radius: 32rpx;
  margin-bottom: 20rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #9ca3af;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
}

.feed-tabs {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding-bottom: 4rpx;
}

.feed-tab {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  font-size: 26rpx;
  color: #6b7280;
  background: #f3f4f6;
  border-radius: 999rpx;
}

.feed-tab-active {
  color: #fff;
  background: linear-gradient(135deg,#667eea 0%,#7f5af0 100%);
}

.feed-scroll {
  height: calc(100vh - 160rpx);
}

.post-list {
  padding: 20rpx 24rpx;
}

.post-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.post-header {
  display: flex;
  align-items: flex-start;
}

.post-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
  background: #e5e7eb;
  flex-shrink: 0;
}

.post-meta {
  flex: 1;
  min-width: 0;
}

.post-author {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #4f46e5;
  margin-bottom: 8rpx;
}

.post-content {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.6;
  display: block;
}

.post-media {
  margin-top: 16rpx;
}

.post-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
  background: #e5e7eb;
}

.post-footer {
  margin-top: 12rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.post-location, .post-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.post-more {
  font-size: 36rpx;
  color: #9ca3af;
  padding: 0 8rpx;
  flex-shrink: 0;
}

.feed-bottom-pad {
  height: 40rpx;
}
