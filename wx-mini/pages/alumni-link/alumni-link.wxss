.alumni-link-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  position: relative;
}

/* 顶部栏 */
.header-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background: #667eea;
  color: #ffffff;
  position: relative;
  z-index: 100;
}

.header-left,
.header-right {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.menu-icon,
.new-topic-icon {
  font-size: 36rpx;
  color: #ffffff;
}

/* 对话容器（全宽） */
.chat-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #ffffff;
  overflow: hidden;
  position: relative;
  height: calc(100vh - 100rpx); /* 减去header高度 */
}

/* 顶部问候语（统一左右留白 24rpx） */
.greeting-section {
  padding: 24rpx 24rpx 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
  background: #ffffff;
}

.greeting-text {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 场景卡片区域（用 margin 控制左右留白，与名片夹一致） */
.mode-cards-section {
  padding: 30rpx 0;
  background: #ffffff;
}

.mode-cards-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin: 0 24rpx;
}

.mode-card {
  min-height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
  border: 2rpx solid #e0e0e0;
  transition: all 0.2s;
}

.mode-card.active {
  background: #f3f4ff;
  border-color: #667eea;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.2);
}

.mode-card-icon {
  font-size: 48rpx;
  line-height: 1;
}

.mode-card-text {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.mode-card.active .mode-card-text {
  color: #667eea;
  font-weight: 600;
}

.mode-card-desc {
  font-size: 20rpx;
  color: #9ca3af;
  text-align: center;
  padding: 0 8rpx;
  line-height: 1.3;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.mode-card.active .mode-card-desc {
  color: #667eea;
  opacity: 0.9;
}

/* 示例问题区域 */
.examples-section {
  margin: 24rpx 24rpx 0;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.examples-title {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 16rpx;
}

.examples-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.example-chip {
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
}

.example-chip:active {
  background: #e5e7eb;
}

.example-text {
  display: block;
  max-width: 420rpx;
  line-height: 1.4;
  word-break: break-all;
}

/* 对话历史（统一左右留白） */
.chat-history {
  flex: 1;
  padding: 20rpx 0;
  background: #ffffff;
  height: 0;
}

.empty-message {
  padding: 40rpx 24rpx;
  text-align: center;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  line-height: 1.8;
}

.msg-item {
  margin-bottom: 24rpx;
  display: flex;
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.msg-item.assistant {
  justify-content: flex-start;
  width: 100%;
}

.msg-item.user {
  justify-content: flex-end;
  padding: 0 24rpx;
  box-sizing: border-box;
}

/* 助手消息包装器 */
.assistant-msg-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}

/* 思考过程区域 */
.thinking-section {
  width: 100%;
  padding: 0;
  margin: 0;
}

.thinking-text {
  font-size: 24rpx; /* 小一号字体 */
  line-height: 1.8;
  color: #999; /* 灰色 */
  display: block;
  word-wrap: break-word;
  word-break: break-all;
}

/* 正式答案区域 */
.answer-bubble {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #f5f5f5;
  border-radius: 20rpx 20rpx 20rpx 4rpx;
  word-wrap: break-word;
  word-break: break-all;
  box-sizing: border-box;
}

.answer-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
  display: block;
}

/* 反馈入口 */
.feedback-row {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #e5e7eb;
}

.feedback-label {
  font-size: 24rpx;
  color: #9ca3af;
  display: block;
  margin-bottom: 12rpx;
}

.feedback-btns {
  display: flex;
  gap: 16rpx;
}

.feedback-btn {
  font-size: 24rpx;
  color: #6b7280;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
}

.feedback-btn:active {
  background: #e5e7eb;
}

/* 用户消息气泡 */
.msg-item.user .msg-bubble {
  max-width: 75%;
  padding: 20rpx 24rpx;
  background: #667eea;
  border-radius: 20rpx 20rpx 4rpx 20rpx;
  word-wrap: break-word;
  word-break: break-all;
}

.msg-text {
  font-size: 28rpx;
  line-height: 1.8;
  color: #333;
}

.msg-item.user .msg-text {
  color: #ffffff;
}

/* 底部操作区（统一左右留白 24rpx） */
.chat-controls {
  padding: 20rpx 24rpx 0;
  padding-bottom: env(safe-area-inset-bottom);
  background: #ffffff;
  border-top: 1rpx solid #f5f5f5;
  position: sticky;
  bottom: 0;
  z-index: 10;
  flex-shrink: 0;
}

/* 控制行：模式选择器 + 策略按钮 */
.controls-row {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 16rpx; /* 减少底部间距 */
  padding-bottom: 16rpx; /* 添加padding作为间距 */
}

/* 模式选择滚动框 */
.mode-selector {
  width: 100%;
  white-space: nowrap;
}

.mode-selector-content {
  display: inline-flex;
  gap: 12rpx;
  padding: 8rpx 24rpx;
}

.mode-selector-item {
  flex-shrink: 0;
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #666;
  transition: all 0.2s;
}

.mode-selector-item.active {
  background: #667eea;
  color: #ffffff;
}

/* 策略按钮与说明 */
.strategy-row {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.strategy-buttons {
  display: flex;
  gap: 16rpx;
}

.strategy-hint {
  font-size: 22rpx;
  color: #9ca3af;
}

.strategy-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx 0;
  border-radius: 12rpx;
  border: 1rpx solid #e0e0e0;
  background: #ffffff;
  transition: all 0.2s;
}

.strategy-btn.active {
  border-color: #667eea;
  background: #f3f4ff;
}

.strategy-icon {
  font-size: 28rpx;
}

.strategy-text {
  font-size: 26rpx;
  color: #666;
}

.strategy-btn.active .strategy-text {
  color: #667eea;
  font-weight: 500;
}

/* 输入框和发送按钮（包成一整行，圆角） */
.input-container {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: #f5f5f5;
  border-radius: 48rpx;
  gap: 12rpx;
  box-sizing: border-box;
}

.mode-toggle-btn {
  flex-shrink: 0;
  padding: 8rpx 16rpx;
  background: #667eea;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ffffff;
}

.chat-input {
  flex: 1;
  min-height: 60rpx;
  max-height: 200rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  background: transparent;
}

.send-btn {
  flex-shrink: 0;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #e0e0e0;
  transition: all 0.2s;
}

.send-btn.active {
  background: #667eea;
}

.send-icon {
  font-size: 28rpx;
  color: #999;
  transform: rotate(0deg);
}

.send-btn.active .send-icon {
  color: #ffffff;
}

/* 历史抽屉 */
.history-drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 998;
  animation: fadeIn 0.3s ease-out forwards;
}

.history-drawer {
  position: fixed;
  top: 0;
  left: 0;
  width: 80%;
  max-width: 600rpx;
  height: 100vh;
  background: #ffffff;
  z-index: 999;
  transform: translateX(-100%);
  transition: transform 0.3s ease-out;
  display: flex;
  flex-direction: column;
  box-shadow: 4rpx 0 20rpx rgba(0, 0, 0, 0.1);
}

.history-drawer.show {
  transform: translateX(0);
}

.drawer-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  background: #667eea;
  color: #ffffff;
}

.drawer-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
}

.drawer-close {
  font-size: 40rpx;
  color: #ffffff;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.drawer-content {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.empty-topics {
  padding: 80rpx 40rpx;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.topic-item {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.2s;
}

.topic-item.active {
  background: #f3f4ff;
}

.topic-item:active {
  background: #f0f0f0;
}

.topic-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.topic-mode {
  font-size: 28rpx;
  font-weight: 600;
  color: #667eea;
}

.topic-time {
  font-size: 24rpx;
  color: #999;
}

.topic-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}

.topic-preview {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}
