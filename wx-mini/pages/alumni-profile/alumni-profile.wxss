/* pages/alumni-profile/alumni-profile.wxss */
.profile-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

.profile-scroll {
  height: 100vh;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  padding: 24rpx 28rpx 12rpx;
}

.card-card {
  margin: 0 28rpx;
  padding: 28rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.my-card-style {
  background: #f9fafb;
  min-height: 400rpx;
}

.my-card-main {
  display: flex;
}

.my-card-style .avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  background-color: #e5e7eb;
  flex-shrink: 0;
}

.my-card-info {
  flex: 1;
  min-width: 0;
}

.my-name {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 6rpx;
  display: block;
}

.my-line {
  font-size: 26rpx;
  color: #4b5563;
  line-height: 1.5;
  display: block;
}

.my-card-extra {
  margin-top: 26rpx;
}

.intro-card-style .intro-text,
.match-card-style .match-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.7;
}

.intro-card-style {
  background: #f9fafb;
  min-height: 800rpx;
}

.scroll-bottom-pad {
  height: 40rpx;
}

/* 固定置底 bar - 通盘规划：头像80 | 姓名区弹性 | 关注按钮120 | 4图标区固定 */
.fixed-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.bar-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
  flex-shrink: 1;
  overflow: hidden;
}

.bar-avatar {
  width: 72rpx;
  height: 72rpx;
  min-width: 72rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #e5e7eb;
  flex-shrink: 0;
}

.bar-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.bar-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bar-follow {
  font-size: 20rpx;
  color: #9ca3af;
  margin-top: 2rpx;
}

.bar-follow-btn {
  width: 120rpx;
  min-width: 120rpx;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0;
  flex-shrink: 0;
  background: #22c55e;
  color: #fff;
  font-size: 24rpx;
  border: none;
  border-radius: 8rpx;
  text-align: center;
}

.bar-follow-btn::after {
  border: none;
}

.bar-icons {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex-shrink: 0;
}

.bar-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 44rpx;
}

.bar-icon {
  font-size: 28rpx;
}

.bar-num {
  font-size: 20rpx;
  color: #9ca3af;
  margin-top: 2rpx;
}
