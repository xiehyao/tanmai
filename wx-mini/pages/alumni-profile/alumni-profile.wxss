/* pages/alumni-profile/alumni-profile.wxss */
.profile-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 140rpx;
}

.profile-scroll {
  height: 100vh;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  padding: 24rpx 28rpx 12rpx;
}

.card-card {
  margin: 0 28rpx;
  padding: 28rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

/* 我的名片：与名片夹卡片布局一致，左头像右信息 */
.my-card-style {
  background: #fff;
  min-height: auto;
}

.my-card-style .card-row {
  display: flex;
}

.my-card-style .card-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  background: #e5e7eb;
  flex-shrink: 0;
}

.my-card-style .card-main {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.my-card-style .card-name {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.my-card-style .card-company {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.my-card-style .card-meta {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.intro-card-style .intro-text,
.match-card-style .match-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.7;
}

.intro-card-style {
  background: #f9fafb;
  min-height: 360rpx;
}

.intro-info-item {
  margin-bottom: 24rpx;
}

.intro-info-item:last-of-type {
  margin-bottom: 0;
}

.intro-label {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 6rpx;
}

.intro-value {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.5;
  word-break: break-all;
}

.intro-photos {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.intro-photo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 12rpx;
  background: #e5e7eb;
}

.intro-bio {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #e5e7eb;
}

.intro-bio-empty .intro-text {
  color: #9ca3af;
}

.scroll-bottom-pad {
  height: 40rpx;
}

/* 固定置底 bar - 左组(头像+姓名+按钮)紧凑 | 右组4图标留足空间 */
.fixed-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bar-left-group {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-shrink: 0;
  min-width: 0;
}

.bar-left {
  display: flex;
  align-items: center;
  flex: 0 1 auto;
  min-width: 0;
  max-width: 240rpx;
  overflow: hidden;
}

.bar-avatar {
  width: 72rpx;
  height: 72rpx;
  min-width: 72rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: #e5e7eb;
  flex-shrink: 0;
}

.bar-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  overflow: hidden;
}

.bar-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.bar-follow {
  font-size: 20rpx;
  color: #9ca3af;
  margin-top: 2rpx;
}

.bar-follow-btn {
  width: 120rpx;
  min-width: 120rpx;
  height: 56rpx;
  padding: 0;
  margin-left: 12rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #22c55e;
  color: #fff;
  font-size: 24rpx;
  border-radius: 8rpx;
}

.bar-icons {
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex: 1;
  margin-left: 40rpx;
  min-width: 0;
}

.bar-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-width: 56rpx;
  height: 64rpx;
  flex: 1;
}

.bar-icon {
  font-size: 36rpx;
  line-height: 40rpx;
  height: 40rpx;
  display: block;
  text-align: center;
}

.bar-num {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 6rpx;
  line-height: 1;
}
