/* pages/alumni-profile/alumni-profile.wxss */
.profile-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 160rpx;
}

.profile-scroll {
  height: 100vh;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  padding: 24rpx 28rpx 12rpx;
}

.card-card {
  margin: 0 28rpx;
  padding: 28rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.my-card-style {
  background: #f9fafb;
}

.my-card-main {
  display: flex;
}

.my-card-style .avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  background-color: #e5e7eb;
  flex-shrink: 0;
}

.my-card-info {
  flex: 1;
  min-width: 0;
}

.my-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 6rpx;
  display: block;
}

.my-line {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.5;
  display: block;
}

.my-card-extra {
  margin-top: 16rpx;
}

.intro-card-style .intro-text,
.match-card-style .match-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.7;
}

.scroll-bottom-pad {
  height: 40rpx;
}

/* 固定置底 bar */
.fixed-bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx;
  padding: 20rpx 28rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  background: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
  display: flex;
  align-items: center;
}

.bar-left {
  display: flex;
  align-items: center;
  flex: 1;
  min-width: 0;
}

.bar-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background: #e5e7eb;
}

.bar-info {
  display: flex;
  flex-direction: column;
}

.bar-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
}

.bar-follow {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}

.bar-follow-btn {
  margin: 0 24rpx;
  padding: 0 36rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #22c55e;
  color: #fff;
  font-size: 26rpx;
  border: none;
  border-radius: 999rpx;
}

.bar-follow-btn::after {
  border: none;
}

.bar-icons {
  display: flex;
  gap: 24rpx;
}

.bar-icon-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bar-icon {
  font-size: 32rpx;
}

.bar-num {
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 4rpx;
}
