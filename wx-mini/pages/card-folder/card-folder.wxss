/* pages/card-folder/card-folder.wxss */
.card-folder-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.search-bar {
  display: flex;
  align-items: center;
  height: 72rpx;
  margin: 20rpx 24rpx;
  padding: 0 24rpx;
  background: #f3f4f6;
  border-radius: 36rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #9ca3af;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
}

.tabs {
  display: flex;
  padding: 0 24rpx 20rpx;
  gap: 32rpx;
}

.tab {
  font-size: 28rpx;
  color: #6b7280;
}

.tab-active {
  font-weight: 700;
  color: #111827;
}

.scroll-area {
  height: calc(100vh - 220rpx);
  padding: 0 0 40rpx 0;
}

/* 用 margin 控制卡片左右留白，scroll-view 的 padding 在部分机型不可靠 */
.card-block {
  margin: 0 24rpx 24rpx 24rpx;
  padding: 24rpx 24rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  box-sizing: border-box;
  overflow: hidden;
}

.card-row {
  display: flex;
}

.card-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  background: #e5e7eb;
  flex-shrink: 0;
}

.card-main {
  flex: 1;
  min-width: 0;
  overflow: hidden;
}

.card-name {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-company {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.card-phone, .card-email {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.card-address {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  color: #9ca3af;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.card-exchange {
  margin-top: 16rpx;
  padding: 12rpx 32rpx;
  background: rgba(102,126,234,0.15);
  color: #4f46e5;
  font-size: 26rpx;
  border-radius: 999rpx;
  display: inline-block;
}

.text-row {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx;
  margin: 0 24rpx 8rpx 24rpx;
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.04);
  box-sizing: border-box;
  overflow: hidden;
}

.text-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
  background: #e5e7eb;
  flex-shrink: 0;
}

.text-main {
  flex: 1;
  min-width: 0;
  overflow: hidden;
  padding-right: 16rpx;
}

.text-name {
  display: block;
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-company {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 24rpx;
  color: #6b7280;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
}

.text-time {
  font-size: 24rpx;
  color: #9ca3af;
  flex-shrink: 0;
}
