/* pages/contacts/contacts.wxss */
.contacts-page {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  height: 72rpx;
  margin: 20rpx 24rpx;
  padding: 0 24rpx;
  background: #f3f4f6;
  border-radius: 36rpx;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 12rpx;
  color: #9ca3af;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #374151;
}

.tabs {
  display: flex;
  padding: 0 24rpx 20rpx;
  gap: 24rpx;
}

.tab {
  font-size: 28rpx;
  color: #6b7280;
}

.tab-active {
  font-weight: 700;
  color: #111827;
}

.cards-scroll {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  white-space: nowrap;
  padding: 0 24rpx 24rpx;
  width: 100%;
  height: 740rpx;
  box-sizing: border-box;
}

.card-item {
  flex-shrink: 0;
  width: 480rpx;
  height: 700rpx;
  margin-right: 24rpx;
  padding: 24rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.card-body {
  flex: 1;
  min-height: 0;
  overflow: hidden;
}

.card-name {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 16rpx;
  flex-shrink: 0;
}

.card-avatar {
  width: 100%;
  height: 260rpx;
  border-radius: 12rpx;
  background: #e5e7eb;
  margin-bottom: 12rpx;
  flex-shrink: 0;
}

.card-desc, .card-phone {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.card-action-wrap {
  flex-shrink: 0;
  width: 100%;
  align-self: stretch;
  padding-top: 20rpx;
  text-align: center;
}

.card-action {
  padding: 12rpx 32rpx;
  background: #e5e7eb;
  color: #6b7280;
  font-size: 26rpx;
  text-align: center;
  border-radius: 999rpx;
  display: inline-block;
}

.card-map {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  box-sizing: border-box;
}

.card-map-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 20rpx;
  flex-shrink: 0;
}

.card-map-img {
  width: 100%;
  flex: 1;
  min-height: 320rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  flex-shrink: 1;
  object-fit: cover;
}

.bottom-list {
  margin: 0 24rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.06);
}

.bottom-item {
  display: flex;
  align-items: center;
  padding: 28rpx 24rpx;
  border-bottom: 1rpx solid #f3f4f6;
  font-size: 30rpx;
  color: #111827;
}

.bottom-item:last-child {
  border-bottom: none;
}

.bottom-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: 24rpx;
  background: #e5e7eb;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #6b7280;
}

.bottom-icon-grid {
  background: linear-gradient(135deg,#667eea,#7f5af0);
  color: #fff;
}

.arrow {
  margin-left: auto;
  color: #9ca3af;
  font-size: 32rpx;
}
