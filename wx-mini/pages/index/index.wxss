/* pages/index/index.wxss */
.page {
  min-height: 100vh;
  background: #667eea;
}

.page-scroll {
  height: 100vh;
  padding: 24rpx 24rpx 40rpx;
  box-sizing: border-box;
}

.hero {
  padding: 52rpx 24rpx 40rpx;
  text-align: center;
}

.hero-title {
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #ffffff;
}

.hero-subtitle {
  display: block;
  margin-top: 14rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.82);
}

.section {
  margin-bottom: 32rpx;
}

.section-header {
  margin: 8rpx 4rpx 12rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
}

.subsection-header {
  margin: 4rpx 4rpx 12rpx;
}

.subsection-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #111827;
}

.section-card {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 10rpx 40rpx rgba(102, 126, 234, 0.18);
}

.notice-card {
  padding: 32rpx 32rpx 40rpx;
}

.notice-block {
  margin-top: 24rpx;
}

.notice-text {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.6;
  display: block;
}

.primary-btn,
.secondary-btn {
  margin-top: 28rpx;
  height: 80rpx;
  border-radius: 999rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.primary-btn {
  background: linear-gradient(135deg, #667eea 0%, #7f5af0 100%);
  color: #ffffff;
  border: none;
}

.secondary-btn {
  background-color: #eef2ff;
  color: #4f46e5;
  border: none;
}

.primary-btn::after,
.secondary-btn::after {
  border: none;
}

/* 我的名片 */
.my-card {
  padding: 32rpx 28rpx 28rpx;
}

.link-inner-card {
  background-color: #f9fafb;
  box-shadow: 0 6rpx 24rpx rgba(148, 163, 184, 0.35);
  border-radius: 20rpx;
}

.my-card-main {
  display: flex;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  background-color: #e5e7eb;
}

.my-card-info {
  flex: 1;
}

.my-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 6rpx;
}

.my-line {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.5;
  display: block;
}

.my-line.address {
  margin-top: 4rpx;
}

.my-card-extra {
  margin-top: 16rpx;
}

.my-card-badge {
  margin-top: 16rpx;
  align-self: flex-start;
  padding: 10rpx 24rpx;
  border-radius: 999rpx;
  border: 1rpx dashed #9ca3af;
  font-size: 22rpx;
  color: #6b7280;
  text-align: center;
}

/* 校友会活动 */
.activities-wrap {
  padding: 0;
  background: transparent;
}

.activities-scroll {
  white-space: nowrap;
  padding-right: 24rpx;
}

.activity-item {
  width: 260rpx;
  display: inline-block;
  margin-right: 20rpx;
  vertical-align: top;
}

.activity-poster {
  position: relative;
  width: 100%;
  height: 140rpx;
  border-radius: 20rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #667eea 0%, #7f5af0 100%);
}

/* 不同活动卡片的彩色渐变背景 */
.poster-tea {
  background: linear-gradient(135deg, #f97316 0%, #fb923c 45%, #facc15 100%);
}

.poster-innovation {
  background: linear-gradient(135deg, #22c1c3 0%, #4f46e5 50%, #a855f7 100%);
}

.poster-food {
  background: linear-gradient(135deg, #fb7185 0%, #f97373 45%, #facc15 100%);
}

.activity-title {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: #ffffff;
  text-align: center;
  display: block;
}

/* 附近校友 */
.nearby-card .placeholder-text {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-top: 4rpx;
  display: block;
}

.nearby-avatars {
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
  margin-bottom: 8rpx;
}

.nearby-item {
  width: 25%;
  box-sizing: border-box;
  padding: 8rpx 4rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.nearby-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  background-color: #e5e7eb;
}

.nearby-name {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #374151;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

/* 校友连连看 */
.link-card {
  padding-bottom: 28rpx;
}

.link-avatars {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.link-person {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.link-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  background-color: #e5e7eb;
  margin-bottom: 8rpx;
}

.link-label {
  font-size: 24rpx;
  color: #111827;
}

.link-connector {
  display: flex;
  align-items: center;
  margin: 0 32rpx;
}

.link-line {
  flex: 1;
  height: 4rpx;
  border-radius: 999rpx;
  background: linear-gradient(90deg, #60a5fa 0%, #a855f7 50%, #f97316 100%);
}

.link-connector-badge {
  margin: 0 12rpx;
  width: 44rpx;
  height: 44rpx;
  border-radius: 999rpx;
  background-color: #ffffff;
  box-shadow: 0 4rpx 14rpx rgba(148, 163, 184, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
}

.link-connector-text {
  font-size: 24rpx;
  color: #6366f1;
}

/* 校友列表 */
.alumni-list-wrap {
  margin-top: 24rpx;
  margin-bottom: 20rpx;
}

.alumni-tabs {
  display: flex;
  flex-wrap: nowrap;
  gap: 8rpx;
  margin-bottom: 20rpx;
  overflow-x: auto;
  padding-bottom: 4rpx;
}

.alumni-tab {
  flex-shrink: 0;
  padding: 10rpx 14rpx;
  font-size: 22rpx;
  color: #6b7280;
  background-color: #f3f4f6;
  border-radius: 999rpx;
  white-space: nowrap;
}

.alumni-tab-active {
  color: #ffffff;
  background: linear-gradient(135deg, #667eea 0%, #7f5af0 100%);
}

.alumni-grid {
  display: flex;
  flex-wrap: wrap;
}

.alumni-grid .nearby-item {
  width: 25%;
  box-sizing: border-box;
  padding: 8rpx 4rpx;
}

.alumni-grid .nearby-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  background-color: #e5e7eb;
}

.alumni-grid .nearby-name {
  margin-top: 8rpx;
  font-size: 22rpx;
  color: #374151;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  max-width: 100%;
}

.link-text-block {
  margin-top: 4rpx;
}

.section-subcard {
  margin-top: 24rpx;
  padding: 24rpx 24rpx 28rpx;
  border-radius: 20rpx;
  background-color: #f9fafb;
}

.link-desc {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.6;
  display: block;
}

/* AI 助手小卡片 */
.tiny-card {
  padding: 24rpx 28rpx;
}

.tiny-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
}

.tiny-subtitle {
  margin-top: 6rpx;
  font-size: 24rpx;
  color: #4b5563;
}
