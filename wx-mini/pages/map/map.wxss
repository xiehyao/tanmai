/* pages/map/map.wxss */
.map-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.map-container {
  flex: 1;
  width: 100%;
}

.controls {
  display: flex;
  padding: 20rpx;
  background: #fff;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.control-item {
  flex: 1;
  padding: 20rpx;
  margin: 0 10rpx;
  background: #667eea;
  color: #fff;
  text-align: center;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.friend-list {
  max-height: 400rpx;
  overflow-y: auto;
  background: #fff;
  padding: 20rpx;
}

.friend-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.friend-item .avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.friend-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.friend-info .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.distance {
  font-size: 24rpx;
  color: #999;
}

.card-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.card-modal-content {
  width: 100%;
  max-height: 80vh; /* 旧版 */
  background: #fff;
  border-radius: 30rpx 30rpx 0 0;
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
}

@keyframes slideUp {
  from { transform: translateY(100%); }
  to { transform: translateY(0); }
}

.card-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.card-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.card-modal-close {
  font-size: 50rpx;
  color: #999;
  line-height: 1;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 40rpx;
}

.card-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 40rpx;
  border-bottom: 1rpx solid #eee;
}

.card-header .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background: #f5f5f5;
}

.card-header .name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.card-header .nickname {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.card-header .work-wechat {
  font-size: 24rpx;
  color: #666;
}

.card-content .info-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.card-content .info-item:last-child {
  border-bottom: none;
}

.card-content .label {
  width: 120rpx;
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
}

.card-content .value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

/* 新版弹窗 50% 高度 + 我的名片样式 */
.card-modal-new {
  max-height: 50vh;
  height: 50vh;
  position: relative;
}
.card-modal-close-icon {
  position: absolute;
  top: 16rpx;
  right: 28rpx;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  z-index: 1;
}
.card-modal-body-new {
  padding: 28rpx;
  flex: 1;
  overflow-y: auto;
}
/* 与 index 我的名片 完全一致的样式 */
.link-inner-card-style {
  background-color: #f9fafb;
  box-shadow: 0 6rpx 24rpx rgba(148, 163, 184, 0.35);
  border-radius: 20rpx;
  padding: 32rpx 28rpx 28rpx;
  min-height: 360rpx;
  width: 100%;
  box-sizing: border-box;
}
.card-modal-body-new .my-card-main { display: flex; }
.card-modal-body-new .avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
  background-color: #e5e7eb;
  flex-shrink: 0;
}
.card-modal-body-new .my-card-info { flex: 1; min-width: 0; }
.card-modal-body-new .my-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 6rpx;
}
.card-modal-body-new .my-name-nickname {
  font-size: 24rpx;
  font-weight: 400;
  color: #6b7280;
  margin-left: 4rpx;
}
.card-modal-body-new .my-line {
  font-size: 24rpx;
  color: #4b5563;
  line-height: 1.5;
  display: block;
}
.card-modal-body-new .my-line.address { margin-top: 4rpx; }
.card-modal-body-new .my-line-row {
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
}
.card-modal-body-new .my-line-row text { font-size: 24rpx; color: #4b5563; }
.card-modal-body-new .my-card-extra { margin-top: 16rpx; }
.map-card-bio {
  margin-top: 20rpx;
  padding: 16rpx 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}
.map-card-bio .bio-text {
  font-size: 24rpx;
  color: #6b7280;
  line-height: 1.6;
}
/* 与 index my-card-badge 一致的占位，保持卡片高度 */
.map-card-placeholder {
  margin-top: 16rpx;
  min-height: 48rpx;
}
.card-modal-footer {
  padding: 20rpx 28rpx 32rpx;
  border-top: 1rpx solid #f0f0f0;
}
.detail-btn {
  width: 100%; height: 80rpx;
  display: flex; align-items: center; justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #7f5af0 100%);
  color: #fff; border: none; border-radius: 12rpx; font-size: 28rpx;
}
.detail-btn::after { border: none; }
