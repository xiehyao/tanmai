/* pages/match/match.wxss */
.match-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.header {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.match-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
}

.match-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
}

.match-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.match-score {
  font-size: 32rpx;
  color: #667eea;
  margin-bottom: 30rpx;
}

.match-reason {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  text-align: center;
  padding: 0 40rpx;
}

