.detail-page{min-height:100vh;background:#f5f5f5;padding-bottom:140rpx}
.detail-scroll{height:100vh}
.main-post{margin:24rpx;padding:28rpx;background:#fff;border-radius:20rpx;box-shadow:0 4rpx 20rpx rgba(0,0,0,.06)}
.post-header{display:flex;align-items:flex-start}
.post-avatar{width:100rpx;height:100rpx;border-radius:16rpx;margin-right:24rpx;background:#e5e7eb;flex-shrink:0}
.post-meta{flex:1;min-width:0}
.post-author{display:block;font-size:30rpx;font-weight:600;color:#4f46e5;margin-bottom:12rpx}
.post-content{font-size:28rpx;color:#374151;line-height:1.6;display:block}
.post-media{margin-top:16rpx}
.post-image{width:100%;max-width:560rpx;border-radius:12rpx;background:#e5e7eb}
.post-footer{margin-top:16rpx;display:flex;align-items:center;gap:16rpx}
.post-location,.post-time{font-size:24rpx;color:#9ca3af}
.post-more{font-size:40rpx;color:#9ca3af;padding:0 8rpx;flex-shrink:0}
.comments-section{margin:0 24rpx 24rpx;padding:24rpx;background:#fff;border-radius:20rpx;box-shadow:0 4rpx 20rpx rgba(0,0,0,.06)}
.comments-header{display:flex;justify-content:space-between;align-items:center;margin-bottom:12rpx}
.comments-title{font-size:26rpx;color:#6b7280}
.comments-sort{font-size:28rpx;color:#9ca3af}
.comments-label{font-size:28rpx;font-weight:600;color:#111827;margin-bottom:20rpx}
.comment-list{border-top:1rpx solid #e5e7eb;padding-top:20rpx}
.comment-item{display:flex;margin-bottom:24rpx}
.comment-reply{margin-left:48rpx}
.comment-reply-2{margin-left:48rpx;margin-top:16rpx}
.comment-avatar{width:64rpx;height:64rpx;border-radius:50%;margin-right:16rpx;background:#e5e7eb;flex-shrink:0}
.comment-body{flex:1;min-width:0}
.comment-author{display:block;font-size:26rpx;font-weight:600;color:#374151;margin-bottom:6rpx}
.comment-content{font-size:26rpx;color:#4b5563;line-height:1.5;display:block}
.comment-footer{margin-top:8rpx;display:flex;align-items:center;justify-content:space-between}
.comment-time{font-size:22rpx;color:#9ca3af}
.comment-actions{display:flex;align-items:center;gap:16rpx}
.comment-like{font-size:22rpx;color:#9ca3af}
.fixed-bottom-bar{position:fixed;bottom:0;left:0;right:0;height:120rpx;padding:16rpx 24rpx;padding-bottom:calc(16rpx + env(safe-area-inset-bottom));background:#fff;box-shadow:0 -4rpx 20rpx rgba(0,0,0,.08);display:flex;align-items:center;justify-content:space-between}
.bar-left-group{display:flex;align-items:center;gap:10rpx;flex-shrink:0}
.bar-left{display:flex;align-items:center;flex:0 1 auto;max-width:240rpx;overflow:hidden}
.bar-avatar{width:72rpx;height:72rpx;min-width:72rpx;border-radius:50%;margin-right:16rpx;background:#e5e7eb}
.bar-info{flex:1;min-width:0;overflow:hidden}
.bar-name{font-size:28rpx;font-weight:600;color:#111827;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}
.bar-follow{font-size:20rpx;color:#9ca3af;margin-top:2rpx}
.bar-follow-btn{width:120rpx;min-width:120rpx;height:56rpx;margin-left:12rpx;flex-shrink:0;display:flex;align-items:center;justify-content:center;background:#22c55e;color:#fff;font-size:24rpx;border-radius:8rpx}
.bar-icons{display:flex;align-items:center;justify-content:space-between;flex:1;margin-left:40rpx}
.bar-icon-item{display:flex;flex-direction:column;align-items:center;min-width:56rpx;flex:1}
.bar-icon{font-size:36rpx;line-height:40rpx}
.bar-num{font-size:22rpx;color:#9ca3af;margin-top:6rpx}
