/* pages/profile/profile.wxss */
.profile-page {
  min-height: 100vh;
  background: #f5f5f5;
}

.user-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.work-wechat {
  font-size: 24rpx;
  opacity: 0.9;
}

.menu-list {
  margin-top: 20rpx;
  background: #fff;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 32rpx;
  color: #333;
}

.menu-item:active {
  background: #f5f5f5;
}

.arrow {
  color: #999;
  font-size: 32rpx;
}

.actions {
  padding: 40rpx;
}

.logout-btn {
  background: #ff4444;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 24rpx;
}

.logout-btn:active {
  opacity: 0.8;
}

