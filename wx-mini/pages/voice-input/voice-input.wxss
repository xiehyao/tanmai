/* pages/voice-input/voice-input.wxss */
.voice-input-page {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
}

.header {
  padding: 40rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
  display: block;
}

.mode-selector {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.mode-btn {
  flex: 1;
  padding: 20rpx;
  text-align: center;
  border-radius: 8rpx;
  margin: 0 10rpx;
  background: #f0f0f0;
  color: #666;
  font-size: 28rpx;
}

.mode-btn.active {
  background: #667eea;
  color: #fff;
}

.chat-container {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

.message {
  margin-bottom: 30rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  max-width: 70%;
  word-wrap: break-word;
}

.message.user {
  background: #667eea;
  color: #fff;
  margin-left: auto;
  text-align: right;
}

.message.assistant {
  background: #fff;
  color: #333;
  margin-right: auto;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.input-area {
  padding: 20rpx;
  background: #fff;
  border-top: 1rpx solid #eee;
}

.voice-btn {
  margin-bottom: 20rpx;
}

.text-input-area {
  display: flex;
  align-items: center;
}

.text-input-area input {
  flex: 1;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.match-feedback {
  margin: 20rpx;
  padding: 20rpx;
  background: #fff3cd;
  border-radius: 8rpx;
  border-left: 4rpx solid #ffc107;
}

.feedback-title {
  font-weight: bold;
  color: #856404;
  display: block;
  margin-bottom: 10rpx;
}

